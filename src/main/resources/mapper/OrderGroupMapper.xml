<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cloneproject.demo.orderGroup.repository.OrderGroupRepository">

  <!-- 회원 ID로 주문 그룹 조회 -->
  <select id="findByMemberId" resultType="com.cloneproject.demo.orderGroup.OrderGroup">
    SELECT *
    FROM order_group
    WHERE member_id = #{memberId}
  </select>

  <!-- 주문 그룹 ID로 조회 -->
  <select id="findById" resultType="com.cloneproject.demo.orderGroup.OrderGroup">
    SELECT *
    FROM order_group
    WHERE id = #{id}
  </select>

</mapper>